<% layout('layouts/boilerplate') %>
<div class="container">
<div class="center-form d-flex">
    <div class="row my-auto">
        <div class="col-xl-4 offset-md-4">
            <div class="card shadow">
                <img src="https://res.cloudinary.com/dsyimxnrg/image/upload/v1666364322/HimalyanCamps/photo_2022-06-10_18-24-01_fhbw81.jpg"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Reset password</h5>
                <form action="/passwordReset" class="validate-form" method="POST" novalidate>
                    <label for="email">Email:</label>
                    <input type="email" name="email" class="form-control mb-3" readonly value="<%= user.email %>">
                    <label for="password" class="form-label">Enter new password:</label>
                    <input type="password" name="password" id="password" class="form-control mb-3">
                    <div class="d-grid gap-2">
                        <button class="btn btn-success col-12">Change password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
</div>